<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zed.arduinocontroller.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:id="@+id/btnUp"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnLeft"
        android:layout_toEndOf="@+id/btnLeft" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/btnLeft"
        android:layout_below="@+id/btnUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/btnRight"
        android:layout_below="@+id/btnUp"
        android:layout_toRightOf="@+id/btnUp"
        android:layout_toEndOf="@+id/btnUp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:id="@+id/btnDown"
        android:layout_below="@+id/btnRight"
        android:layout_alignLeft="@+id/btnUp"
        android:layout_alignStart="@+id/btnUp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bluetooth Not Connected"
        android:id="@+id/myLabel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Device"
        android:id="@+id/btnCon"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etBname"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnCon"
        android:layout_toLeftOf="@+id/btnCon" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_above="@+id/btnStartSpeech"
        android:layout_toRightOf="@+id/btnCon"
        android:layout_alignRight="@+id/myLabel"
        android:layout_alignEnd="@+id/myLabel"
        android:layout_below="@+id/tvCmd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Speech"
        android:id="@+id/btnStartSpeech"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/myLabel"
        android:layout_alignEnd="@+id/myLabel"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotate Left"
        android:id="@+id/btnRL"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotate Right"
        android:id="@+id/btnRR"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnRight"
        android:layout_alignEnd="@+id/btnRight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvCmd"
        android:layout_alignTop="@+id/btnRR"
        android:layout_alignBottom="@+id/btnRR"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/myLabel"
        android:layout_alignStart="@+id/myLabel" />

</RelativeLayout>
